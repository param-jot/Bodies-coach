<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyBackground14"
    android:orientation="vertical">

    <include layout="@layout/toolbar_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Pay"
            android:textAllCaps="true"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$180"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                fontPath="fonts/System_San_Francisco_Display_Thin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="All Inclusive"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingBottom="40dp"
        android:background="@drawable/white_rounded_corners_rectangle"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Saved Cards"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <include layout="@layout/payments_saved_cards"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorGreyBackground7"/>

        <include layout="@layout/payments_saved_cards_not_selected"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:layout_marginTop="-10dp"
        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/semi_rounded_corner_red_background"
        android:text="PAY NOW"/>

    <TextView
        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Payment Options"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Thin.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit / Debit card"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorGrey"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:tint="@color/colorGrey2"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorGreyBackground7"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Thin.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift Card"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorGrey"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:tint="@color/colorGrey2"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorGreyBackground7"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Thin.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direct Bank Transfer"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorGrey"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:tint="@color/colorGrey2"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorGreyBackground7"/>




</LinearLayout>