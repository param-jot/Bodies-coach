<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/complete_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/snipper_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="New Message"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Gold's Gym, Venice, CA"
                    android:textColor="@color/colorGreen3"
                    android:textSize="16sp" />

                <TextView
                    fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textAllCaps="true"
                    android:text="Today | 11:43pm"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp" />


                <TextView
                    fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feedback_date_text"
                    android:layout_marginTop="10dp"
                    android:text="gnnklhnrtlkgnkljngklttngkltnngkldjkllnglbjfgkbnxfmkngjkdfhfjgbdsjkfgbjksdbfgjksrbrfgbsjkjd nvjj shfiuhjiiosjkjklsannjkd jhduiwpdkmnnkjdio jkdjjklsndjkoi"
                    android:textColor="@color/colorGrey"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/coach_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cycling"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="0dp"
            app:civ_shadow="false" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:id="@+id/expand_button"
            android:layout_below="@+id/complete_layout"
            android:src="@drawable/snipper_icon"/>

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/expand_button"
            android:layout_marginTop="5dp"
            android:text="ACTIONS"
            android:textColor="@color/colorBlueBackground"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="35dp"
        android:paddingBottom="10dp"
        android:background="@color/colorYellow"
        android:orientation="vertical">

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:text="REPLY"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:text="MARK AS READ"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/colorYellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 3 More..."
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"/>

    </RelativeLayout>
</LinearLayout>