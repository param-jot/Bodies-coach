<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
            android:layout_margin="5dp"
            android:text="Send"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorTextRed"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:text="Send a Message"
            android:textSize="13sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreyBackground18"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
            android:layout_margin="5dp"
            android:text="This message will be sent to the following session"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextRed"
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:layout_margin="5dp"
            android:text="Daily Yoga with Rhonda"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="5dp"
            android:text="Gold's Gym, Venice, CA"
            android:textSize="13sp"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>