<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/colorYellow2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY YOGA WITH RHONDA"
            android:textColor="@color/colorGrey"
            fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February 08, 2016"
                android:textColor="@color/black"
                fontPath="fonts/System_San_Francisco_Display_Thin.ttf"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30pm - 1:30pm"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorGreen5"
                fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How would you like to join this session?"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
            android:textSize="28sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:tint="@color/black"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/snipper_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FREE Trial"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorTextRed"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No obligations, No risk trial to see if this session is for you!"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGrey"
                        fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorGreyBackground7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:tint="@color/black"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/snipper_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single Session Access"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You get access to just this session and there are no refunds for No-shows!"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGrey"
                        fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 120"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorGreyBackground7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:tint="@color/black"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/snipper_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Class Schedule"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up for a full class schedule in one go. Pay Less, and choose any available time."
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGrey"
                        fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From $90 / session"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorGreyBackground7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:tint="@color/black"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/snipper_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Membership Options"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Significant savings when you sign up for a membership plan."
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGrey"
                        fontPath="fonts/System_San_Francisco_Display_Regular.ttf"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From $230 / week"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        fontPath="fonts/System_San_Francisco_Display_Bold.ttf"
                        android:textSize="16sp"/>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorGreyBackground7"/>
    </LinearLayout>


</LinearLayout>